<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calculadora"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewScreen"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#FFFFFF"
                android:gravity="end"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/screenTextButtonsPushed"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#FFFFFF"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="32sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewScreen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Fila con botones adicionales como 0 y operaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Fila de botones de operaciones (suma, resta, multiplicación, división) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="×"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDiv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="÷"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_orange_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="= "
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:backgroundTint="@color/button_fire_tint"
                    app:cornerRadius="12dp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
